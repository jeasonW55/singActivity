<?xml version="1.0" encoding="utf-8"?>
<com.example.myapplication.views.GlobalView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/global_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.myapplication.views.TitleBarView
        android:id="@id/title_bar"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:background="@color/colorLightGreen" />

    <com.example.myapplication.views.ContentView
        android:id="@id/content_view"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_bar"
        android:layout_above="@id/navigation_bar"
        android:background="@color/red" />

    <com.example.myapplication.views.NavigatorView
        android:id="@id/navigation_bar"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp"/>

</com.example.myapplication.views.GlobalView>