<?xml version="1.0" encoding="utf-8"?>
<com.example.myapplication.views.LoginPageView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/lightYellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_400dp"
        android:orientation="vertical"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@id/below_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_400dp"
        android:layout_marginHorizontal="@dimen/dimen_40dp"
        android:orientation="vertical"
        android:layout_below="@id/top_layout"
        >

        <EditText
            android:id="@id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_name"/>

        <EditText
            android:id="@id/user_passwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:hint="@string/user_passwd"/>

        <Button
            android:id="@id/user_login"
            android:background="@drawable/common_btn_background"
            android:text="@string/login_submit"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_16sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"/>
    </LinearLayout>


</com.example.myapplication.views.LoginPageView>